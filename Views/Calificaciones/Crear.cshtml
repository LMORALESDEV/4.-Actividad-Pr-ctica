@model CalificacionViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "Asignar Calificación";
}

<h2>Asignar Calificación</h2>

<form asp-action="Crear" method="post">
    <div>
        <label asp-for="MatriculaEstudiante"></label>
        <input asp-for="MatriculaEstudiante" class="form-control" />
        <span asp-validation-for="MatriculaEstudiante" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CodigoMateria"></label>
        <select asp-for="CodigoMateria" asp-items="Model.CodigosMaterias" class="form-select"></select>
        <span asp-validation-for="CodigoMateria" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Periodo"></label>
        <select asp-for="Periodo" asp-items="Model.Periodos" class="form-select"></select>
        <span asp-validation-for="Periodo" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Nota"></label>
        <input asp-for="Nota" class="form-control" />
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <button class="btn btn-success" type="submit">Crear</button>
        <a class="btn btn-secondary" asp-action="lista">Cancelar</a>
    </div>

</form>