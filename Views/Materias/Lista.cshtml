@model IEnumerable<MateriaViewModel>

@{
    ViewBag.Title = "Lista de Materias";
}

<h2>Materias</h2>

<a class="btn btn-primary mb-4" asp-action="crear">Crear materia</a>

@if (Model.Any())
{
    <table class="table table-striped" border="1">
        <thead>
            <tr>
                <th>Código</th>
                <th>Nombre</th>
                <th>Carrera</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Codigo</td>
                    <td>@item.Nombre</td>
                    <td>@item.Carrera</td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { codigo = item.Codigo }) |
                        @Html.ActionLink("Eliminar", "Eliminar", new { codigo = item.Codigo })
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No hay materias registradas</p>
}

